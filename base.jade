mixin base()
  doctype html
  html(lang="en")
    head
      title A Few of My Favorite Things
      meta(charset="utf-8")
      meta(http-equiv="X-UA-Compatible" content="IE=edge")
      meta(name="viewport" content="width=device-width, initial-scale=1")
      meta(name="description" content="")
      meta(name="keywords" content="")
      link(href="http://fonts.googleapis.com/css?family=Open+Sans" rel="stylesheet" type="text/css")
      link(href="http://maxcdn.bootstrapcdn.com/font-awesome/4.2.0/css/font-awesome.min.css" rel="stylesheet")
      link(href="https://maxcdn.bootstrapcdn.com/bootswatch/3.3.2/sandstone/bootstrap.min.css" rel="stylesheet" type="text/css")
      link(href="css/modal.css" rel="stylesheet" type="text/css")
      link(href="css/index.css" rel="stylesheet" type="text/css")
    body
      nav.navbar.navbar-fixed-top
        .container
          .navbar-header
            a.navbar-brand(href="#index"): img(src="data:image/svg+xml;base64,")
            button.navbar-toggle.collapsed(type="button" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar")
              span.sr-only Toggle navigation
              span.icon-bar
              span.icon-bar
              span.icon-bar
          #navbar.navbar-collapse.collapse
            ul.nav.navbar-nav.navbar-right
              li: a(href="#promotional") Services
              li: a(href="#about") About
              li: a(href="#contact") Contact
      block
      footer.text-center
        .footer-above
          .container
            .row
              .footer-col.col-md-12.text-center.body-text &#169; 2015 A Few of My Favorite Things LLC. All rights reserved.
      script(src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js" type="text/javascript")
      script(src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.1/js/bootstrap.min.js" type="text/javascript")
      script(src="js/index.js" type="text/javascript")



mixin img-modal(id, src)
  .modal.fade(id=id tabindex="-1" role="dialog" aria-hidden="true")
    .modal-dialog
      .modal-content
        .modal-header
          button.close(type="button" data-dismiss="modal" aria-label="Close")
            span(aria-hidden="true") &#215;
        .modal-body
          img(src=src)


